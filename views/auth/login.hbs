<div class="auth-background">
    <div class="container">
        <h1 style="text-align: center; padding-top: 30px; color: white">Вход</h1>
        {{#if errorLogin}}
        <p class="alert">{{errorLogin}}</p>
        {{/if}}
        <form action="/auth/login" method="POST">
            <div class="mb-3" style="padding-top: 30px;">
                <h3 style="color: white;">Введите e-mail</h3>
                <label for="email" class="form-label"></label>
                <input type="email" class="form-control" id="exampleInputEmail1" name="email"
                    style="border-radius: 10px;">

            </div>
            <div class="mb-3">
                <h3 style="color: white;">Введите пароль</h3>
                <label for="password" class="form-label"></label>
                <input type="password" class="form-control" id="password" name="password">
            </div>
            <button type="submit" class="btn btn-primary">Войти</button>
        </form>
        <a href="/auth/register">Ссылка на Регистрацию</a>
    </div>

</div>